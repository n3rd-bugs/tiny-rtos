# This function will convert the given AVR register to its address.
function (value_map value value_return)
    if (${value} STREQUAL "PINA")
        set(${value_return} 0x0 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "DDRA")
        set(${value_return} 0x1 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PORTA")
        set(${value_return} 0x2 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PINB")
        set(${value_return} 0x3 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "DDRB")
        set(${value_return} 0x4 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PORTB")
        set(${value_return} 0x5 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PINC")
        set(${value_return} 0x6 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "DDRC")
        set(${value_return} 0x7 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PORTC")
        set(${value_return} 0x8 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PIND")
        set(${value_return} 0x9 CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "DDRD")
        set(${value_return} 0xA CACHE INTERNAL "" FORCE)
    elseif (${value} STREQUAL "PORTD")
        set(${value_return} 0xB CACHE INTERNAL "" FORCE)
    else ()
        message(FATAL_ERROR "Unknown AVR register ${value}.")
    endif ()
endfunction ()